{
  "name": "@frontrockets/redux-abstract-action",
  "version": "0.0.1",
  "description": "Organize Actions in react-redux applications",
  "main": "src/index.js",
  "repository": "git@github.com:frontrockets/redux-abstract-action.git",
  "author": "Eugene Zhlobo <ezhlobo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "prettier --check 'src/**/*.js'",
    "size": "size-limit",
    "test": "jest"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "prettier": "1.18.2",
    "size-limit": "^1.3.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "src/index.js",
      "limit": "45 ms"
    }
  ],
  "jest": {
    "testMatch": [
      "**/tests/**/*.[jt]s?(x)"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
